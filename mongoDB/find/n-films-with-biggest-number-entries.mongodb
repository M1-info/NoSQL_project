use("ct620574")

let projection = {"_id" : 0, "title" : 1, "numberEntries" : 1}
let sort = {"recipe" : -1}
let nb_films = 10

let films = db.films.find({}, projection).sort(sort).limit(nb_films)

if(films == null){
    print("Pas de film avec nombre d'entrées dans la base de données.")
} else {
    print(`Liste des ${nb_films} films avec le plus d'entrées : `)
