use("ct620574")

let nb_films = 10

let films = db.films.find({}, {"_id" : 0, "title" : 1, "numberEntries" : 1}).sort({recipe: -1}).limit(nb_films)

if(films == null){
    print("Pas de film avec numbre d'entrées dans la base de données.")
} else {
    print(`Voici les ${nb_films} films avec le plus d'entrées : `)
    films.forEach(film => {
        print(`► ${film.title} avec ${film.numberEntries} entrées ` )
    })
}